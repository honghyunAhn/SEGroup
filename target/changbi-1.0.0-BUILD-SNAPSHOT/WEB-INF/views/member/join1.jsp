<script type="text/javascript">
$(document).ready(function() {
	// 전체동의 처리
	$("#chkAll").click(function() {
		$("input[name='agree']").prop("checked", $(this).prop("checked"));
	});

	$("input[name='agree']").click(function() {
		if($("#chkAll").is(":checked") && !$(this).is(":checked")) {
			$("#chkAll").prop("checked", false);
		}
	});
});

// 본인 인증 팝업
var idenWin;
function popIdentity(iden_gbn) {
	if (!checkAgree()) {
		return;
	}

	switch(iden_gbn) {
	case 'phone':	// 휴대 전화
	case 'cert':	// 공인 인증서
		//window.open('<c:url value="/iden/nice/checkplus"/>?iden_gbn='+iden_gbn,'','top=100px,left=100px,width=422px,height=660px');
		idenWin = popIdenWindow('<c:url value="/iden/nice/checkplus"/>?iden_gbn='+iden_gbn, 440, 680);
		//idenWin = window.open(null,'','width=440px, height=680px, top=100, left=100, fullscreen=no, menubar=no, status=no, toolbar=no, titlebar=yes, location=no, scrollbar=no');
		//idenWin.document.write('<iframe width="100%", height="100%" src="<c:url value="/iden/nice/checkplus"/>?iden_gbn='+iden_gbn+'" frameborder="0" style="margin:0;paddgin:0" scrolling="no" allowfullscreen></iframe>');
		break;
	case 'ipin':	// 아이핀
		//window.open('<c:url value="/iden/nice/ipin"/>?iden_gbn='+iden_gbn,'','width=450, height=550, top=100, left=100, fullscreen=no, menubar=no, status=no, toolbar=no, titlebar=yes, location=no, scrollbar=no');
		idenWin = popIdenWindow('<c:url value="/iden/nice/ipin"/>?iden_gbn='+iden_gbn, 465, 560);
		//idenWin = window.open(null,'','width=465px, height=560px, top=100, left=100, fullscreen=no, menubar=no, status=no, toolbar=no, titlebar=yes, location=no, scrollbar=no');
		//idenWin.document.write('<iframe width="100%", height="100%" src="<c:url value="/iden/nice/ipin"/>?iden_gbn='+iden_gbn+'" frameborder="0" style="margin:0;paddgin:0" allowfullscreen></iframe>');
		break;
	default:

	}
}

// 본인 인증 성공 처리
function onIdentitySuccess(iden_gbn, data) {
	data = $.extend({}, data);	// ie script18
	idenWin.close();

	// 회원중복체크
	checkAlreadyExist(data.di, function(valid, message) {
		if (!valid) {
			alert(message);
			return;
		}
		var grade = $('input[name="grade_r"]:checked').val();
		$('#idenResultForm input[name="grade"]').val(grade);
		$('#idenResultForm input[name="name"]').val(data.name);
		$('#idenResultForm input[name="birth_day"]').val(data.birth);
		$('#idenResultForm input[name="gender"]').val(data.sex);
		$('#idenResultForm input[name="phone"]').val(data.phone);
		$('#idenResultForm input[name="iden_ci"]').val(data.ci);
		$('#idenResultForm input[name="iden_di"]').val(data.di);

		$('#idenResultForm').submit();
	});
}

// 본인 인증 실패 처리
function onIdentityFail(iden_gbn, data) {
	data = $.extend({}, data);	// ie script18
	var errorMessage = (typeof(data['errorMessage']) != 'undefined')?('\n['+data['errorMessage'] + ']'):'';
	alert('본인 인증에 실패하였습니다.' + errorMessage);
}

// 약관 및 회원 구분 선택 체크
function checkAgree() {
	var valid = true;
	$("input[name='agree']").each(function() {
		if($(this).data('must') != 'N') {
			if(!$(this).is(":checked")) {
				alert('약관에 동의하지 않으셨습니다.')
				$(this).focus();
				valid = false;
				return false;
			}
		}
	});

	if (valid) {
		if ($("input[name='grade_r']:checked").length < 1) {
			alert('회원 구분을 선택하여 주십시오.');
			$("input[name='grade_r']").first().focus();
			valid = false;
		}
	}

	return valid;
}


// 회원가입체크
function checkAlreadyExist(iden_di, callback) {
	if (isEmpty(iden_di)) {
		alert('본인 인증 식별자가 존재하지 않습니다.');
		return;
	}
	$.ajax({
		type: "post",
		url: "<c:url value='/member/ajaxCheckAlreadyExist' />",
		data: {"iden_di": iden_di},
		success: function(result) {
			var valid = false;
			var message = '';
			if (isSuccessAjaxResponse(result)) {
				valid = result.INFO == null;
				if (!valid) {
					var id = result.INFO['ID'] || '';
					if(!valid) message = '이미 회원으로 등록되어 있습니다.\n['+id+']';
				}
			} else {
				alertAjaxFailMessage(result);
				return;
			}
			if (callback != null) {
				callback(valid, message);
			}
		},
		error: function(e) {
			if (callback != null) {
				console.log(e);
				callback(false, '오류가 발생하였습니다.');
			} else {
				alert(e.responseText);
			}
		}
	});
}

</script>

